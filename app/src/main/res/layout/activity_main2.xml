<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.iff.pooa20172.trabalho02_2017_2.Main2Activity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome do Evento"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Data do Evento"
        android:inputType="date" />

    <EditText
        android:id="@+id/et_Local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Local do Evento"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Capacidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Capacidade do Evento"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_Promotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Promotor do Evento"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Patrocinio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Patrocinio do Evento"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Valor do Ingresso"
        android:inputType="numberDecimal" />

</LinearLayout>